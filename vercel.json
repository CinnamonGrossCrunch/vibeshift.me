{
  "buildCommand": "npm run build && node scripts/verify-no-api-leakage.js",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_VERSION": "22"
    }
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- ':(exclude)*.md' ':(exclude)LICENSE' ':(exclude).gitignore'",
  "crons": [
    {
      "path": "/api/cron/refresh-cache",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/refresh-newsletter",
      "schedule": "10 15 * * *"
    }
  ],
  "functions": {
    "app/api/newsletter/route.ts": {
      "maxDuration": 300
    },
    "app/api/unified-dashboard/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/refresh-cache/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/refresh-newsletter/route.ts": {
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, stale-while-revalidate=0"
        }
      ]
    },
    {
      "source": "/_next/static/chunks/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/:path*.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
