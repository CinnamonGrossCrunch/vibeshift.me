{
  "buildCommand": "npm run build && node scripts/verify-no-api-leakage.js",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_VERSION": "22"
    }
  },
  "crons": [
    {
      "path": "/api/cron/refresh-cache",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/refresh-newsletter",
      "schedule": "10 15 * * *"
    }
  ],
  "functions": {
    "app/api/newsletter/route.ts": {
      "maxDuration": 60
    },
    "app/api/unified-dashboard/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/refresh-cache/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/refresh-newsletter/route.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=28800, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
